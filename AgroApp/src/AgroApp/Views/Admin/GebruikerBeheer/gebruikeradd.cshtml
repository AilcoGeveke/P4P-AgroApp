<md-content layout-align-gt-xs="center center" layout-fill layout="column" ng-cloak ng-controller="Navigation" class="transparent">
    <div class="md-whiteframe-5dp layout-content form-content">
        <md-toolbar ng-controller="LoginView">
            <div class="md-toolbar-tools">
                <h2>
                    <span>Nieuwe gebruiker</span>
                </h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="changeView('admin/gebruikerbeheer')"><md-icon>arrow_back</md-icon></md-button>
            </div>
        </md-toolbar>
        <form name="gebruikerform" layout="column" ng-controller="loginController" ng-submit="goRegister()">
            <div class="content">
                <md-input-container class="md-block inputnomargin">
                    <label>Volledige Naam</label>
                    <input required type="text" name="userFullName" ng-model="userDetails.fullname" minlength="3" maxlength="100">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>E-mail</label>
                    <input required type="email" name="userEmail" ng-model="userDetails.email" minlength="6" maxlength="100">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>Wachtwoord</label>
                    <input required type="password" name="userPass" ng-model="userDetails.password" minlength="6" maxlength="100">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>Rol</label>
                    <md-select required ng-model="userDetails.rol">
                        <md-option ng-repeat="n in ['Gebruiker', 'Admin']">
                            {{n}}
                        </md-option>
                    </md-select>
                </md-input-container>
            </div>

            <md-divider></md-divider>
            <div layout="row" layout-align="end center" class="content-actions">
                <md-button type="submit" class="md-primary md-raised">Gebruiker Toevoegen</md-button>
            </div>
        </form>
        <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
    </div>
</md-content>

<div class="body-halfbackground"></div>

@section scripts{
    <script src="~/js/admin.js"></script>
    <script src="~/js/loginview.js"></script>
}