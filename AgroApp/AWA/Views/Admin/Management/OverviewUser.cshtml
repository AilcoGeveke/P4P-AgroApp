@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-current-skin="blue" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left"); }</aside>

    <!-- Page Content -->
    <section id="content" ng-controller="UserManagement as um" ng-cloak>
        <div class="container">
            <div slider="um.showEditCard">
                @{ await Html.RenderPartialAsync("management/EditUser"); }
            </div>

            <div slider="um.showMainCard" enabled="true">
                <div class="card">
                    <div class="card-header ch-alt m-b-20">
                        <h2>
                            Alle Gebruikers <small>Klik op de kolomkoppen om te sorteren</small>
                        </h2>
                        <button class="button btn bgm-red btn-float waves-effect" ng-click="um.showEditCard = true; um.showMainCard = false; um.isAdding = true; um.userDetails = {};"><i class="zmdi zmdi-plus"></i></button>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive" ng-controller="tableCtrl as tctrl">
                            <table ng-table="tctrl.tableEdit" class="table table-striped table-vmiddle" ng-init="um.getUsers(false)">
                                <tr ng-repeat="w in um.allUsers">
                                    <td data-title="'ID'" sortable="'id'">
                                        {{ w.userId }}
                                    </td>
                                    <td data-title="'Name'" sortable="'name'">
                                        {{ w.name }}
                                    </td>
                                    <td data-title="'Email'" sortable="'email'">
                                        {{ w.username }}
                                    </td>
                                    <td>
                                        <button class="button btn btn-default" ng-click="um.showEditCard = true; um.showMainCard = false; um.isAdding = false; um.userDetails = w;"><i class="zmdi zmdi-edit"></i></button>
                                        <button class="btn btn-default" ng-click="um.archiveUser(w)"><i class="zmdi zmdi-delete"></i></button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

@section scripts{
    <script src="~/lib/angularslideables-master/angularslideables.js"></script>
    <script>angular.module('materialAdmin').requires.push('angularSlideables');</script>
}