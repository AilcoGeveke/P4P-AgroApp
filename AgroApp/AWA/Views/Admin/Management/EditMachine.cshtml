
<div class="card">
    <div class="form-horizontal">
        <div class="card-header">
            <h2>{{ctrl.isAdding ? "Nieuwe voertuig" : "Voertuig '" + ctrl.machineDetails.name + "' wijzigen"}}<small>Vul de gegevens hieronder in en druk vervolgens op Verzenden</small></h2>
        </div>

        <div class="card-body card-padding">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Volledige Naam</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-model="ctrl.machineDetails.name" type="text" class="form-control input-sm" id="name" placeholder="Naam">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="number" class="col-sm-2 control-label">Nummer</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-model="ctrl.machineDetails.number" type="number" class="form-control input-sm" id="number" placeholder="Nummer">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="tag" class="col-sm-2 control-label">Kenteken</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-model="ctrl.machineDetails.tag" type="text" class="form-control input-sm" id="tag" placeholder="Kenteken">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="type" class="col-sm-2 control-label">Type</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <ui-select ng-model="ctrl.machineDetails.type">
                            <ui-select-match placeholder="Selecteer een Type...">{{$select.selected}}</ui-select-match>
                            <ui-select-choices repeat="stat in ctrl.types | filter: $select.search">
                                <div ng-bind-html="stat | highlight: $select.search"></div>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="status" class="col-sm-2 control-label">Status</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <ui-select ng-model="ctrl.machineDetails.status" search-enabled="false">
                            <ui-select-match placeholder="Selecteer een Status...">{{$select.selected}}</ui-select-match>
                            <ui-select-choices repeat="stat in ctrl.statusTypes | filter: $select.search">
                                <div ng-bind-html="stat | highlight: $select.search"></div>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary btn-icon-text waves-effect m-r-15" ng-click="ctrl.isAdding ? ctrl.addMachine() : ctrl.putMachine()">
                        <i class="zmdi zmdi-check"></i>
                        {{ctrl.isAdding ? "Toevoegen" : "Opslaan"}}
                    </button>
                    <button class="btn btn-default btn-icon-text waves-effect" ng-click="ctrl.showEditCard = false; ctrl.showMainCard = true">
                        <i class="zmdi zmdi-close"></i>
                        Annuleren
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>