<md-content layout-align-gt-xs="center center" layout-fill layout="column" ng-cloak ng-controller="Navigation" class="transparent">
    <div class="md-whiteframe-5dp layout-content form-content" ng-controller="KlantEdit">
        <md-toolbar ng-controller="LoginView">
            <div class="md-toolbar-tools">
                <h2>
                    <span>Klant Toevoegen</span>
                </h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="changeView('admin/klantbeheer')"><md-icon>arrow_back</md-icon></md-button>
            </div>
        </md-toolbar>

        <form name="gebruikerform" layout="column" ng-submit="AddKlant()">
            <div class="content">
                <md-toolbar class="md-warn" ng-show="showError">
                    <div class="md-toolbar-tools">
                        <h6 class="md-flex">{{errorMessage}}</h6>
                    </div>
                </md-toolbar>

                <md-input-container class="md-block inputnomargin">
                    <label>Volledige naam klant</label>
                    <input required type="text" md-maxlength="45" name="klantNaam" ng-model="klantDetails.naam" minlength="2" maxlength="40">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>Adres</label>
                    <input required type="text" name="klantAdres" ng-model="klantDetails.adres" minlength="2" maxlength="45">
                </md-input-container>
            </div>

            <md-divider></md-divider>
            <div layout="row" layout-align="end center" class="content-actions">
                <md-button type="submit" class="md-primary md-raised">
                    <md-icon ng-style="{color: 'white'}"> build </md-icon> Voeg klant toe
                </md-button>
            </div>

        </form>
        <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
    </div>
</md-content>

<div class="body-halfbackground"></div>

@section scripts{
    <script src="~/js/admin.js"></script>
    <script src="~/js/loginview.js"></script>
}
