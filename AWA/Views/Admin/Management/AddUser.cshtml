@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" data-ng-controller="UserManagement as um">
        <div class="container">
            <div class="card">
                <form class="form-horizontal" ng-submit="um.registerUser()">
                    <div class="card-header ch-alt m-b-20">
                        <h2>Gebruiker Toevoegen <small>Vul de gegevens hieronder in en druk vervolgens op Verzenden</small></h2>
                    </div>

                    <div class="card-body card-padding">
                        <div class="form-group">
                            <label for="inputFullName" class="col-sm-2 control-label">Volledige Naam</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.userDetails.Name" type="text" class="form-control input-sm" id="inputFullName" placeholder="Volledige Naam">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.userDetails.Username" type="email" class="form-control input-sm" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Wachtwoord</label>
                            <div class="col-sm-10">

                                <div class="fg-line">
                                    <input required ng-model="um.userDetails.Password" type="password" class="form-control input-sm" id="inputPassword3" placeholder="Wachtwoord">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputRole" class="col-sm-2 control-label">Rol</label>
                            <div class="col-sm-10 m-b-10">
                                <div class="fg-line">
                                    <ui-select ng-model="um.userDetails.role"
                                               style="width: 100%;"
                                               title="Selecteer een rol"
                                               class="form-control">
                                        <ui-select-match placeholder="Selecteer een rol...">{{$select.selected.name}}</ui-select-match>
                                        <ui-select-choices repeat="role.id as role in um.availableRoles | filter: $select.search">
                                            <div ng-bind-html="role.name | highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary waves-effect">Registreer nieuwe gebruiker</button>
                                <a class="btn btn-default" href="~/admin/gebruikers/overzicht">Terug</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>