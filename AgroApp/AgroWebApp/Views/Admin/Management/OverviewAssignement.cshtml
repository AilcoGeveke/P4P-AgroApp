@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-current-skin="blue" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" ng-controller="TimesheetController as am">
        <div class="container">

            <div slider="showNewAssignementCard">
                <div class="card">
                    <div class="card-header ch-alt m-b-15">
                        <h2>Nieuwe Opdracht</h2>
                    </div>

                    <div class="card-body card-padding container-fluid">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-sm-6" ng-init="am.getAllCustomers()">

                                    <div class="form-group fg-line">
                                        <label>Klant</label>
                                        <select chosen data-placeholder="Selecteer een klant" class="w-100" width="'100%'"
                                                ng-model="am.selectedCoworkers"
                                                ng-options="x.IdCustomer as x.Name for x in am.allCustomers"></select>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="date-picker input-group w-100" ng-class="{ 'is-opened': opened == true }">
                                        <div class="fg-line" ng-class="{ 'fg-toggled': opened == true }">

                                            <label>Datum</label>
                                            <input ng-click="open($event, 'opened')" type="text" class="form-control" uib-datepicker-popup="{{format}}" show-weeks="false" ng-model="dtPopup" is-open="opened" min-date="minDate" datepicker-options="dateOptions" ng-required="true" close-text="Close" placeholder="Select Date" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group fg-line">
                                        <label>Locatie</label>
                                        <input type="text" class="form-control ng-isolate-scope" placeholder="Locatie">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-xs-12">
                            <div class="form-group fg-line">
                                <label>Beschrijving</label>
                                <textarea class="form-control" rows="6" placeholder="Beschrijving..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="card-body bgm-gray card-padding">
                        <button class="btn btn-primary m-r-15">Toevoegen</button>
                        <button class="btn btn-default" ng-click="showNewAssignementCard = false" slide-toggle="#newAssignementCard">Annuleren</button>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header ch-alt m-b-20">
                    <h2>Alle Opdrachten <small>Klik op de kolomkoppen om te sorteren</small></h2>
                    <button class="button btn bgm-red btn-float waves-effect" ng-hide="showNewAssignementCard" ng-click="showNewAssignementCard = true"><i class="zmdi zmdi-plus"></i></button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table ng-table="am.tableSorting" class="table table-striped table-vmiddle" ng-init="am.getAllMachines()">
                            <tr ng-repeat="w in am.allMachines">
                                <td data-title="'ID'" sortable="'id'">
                                    {{ w.IdCustomer }}
                                </td>
                                <td data-title="'Naam'" sortable="'Naam'">
                                    {{ w.Name }}
                                </td>
                                <td data-title="'Adres'" sortable="'Adres'">
                                    {{ w.Adress }}
                                </td>
                                <td>
                                    <a class="button btn btn-default" href="wijzigen/{{w.IdMachine}}"><i class="zmdi zmdi-edit"></i></a>
                                    <button class="btn btn-default" ng-click="am.archiveMachine(w)"><i class="zmdi zmdi-delete"></i></button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

@section styles{
    <link href="~/lib/chosen/chosen.css" rel="stylesheet" />
    <link href="~/lib/chosen/chosen-sprite.png" rel="image_src" />
    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/lib/chosen/chosen.js"></script>
    <script src="~/lib/angular-chosen-localytics/dist/angular-chosen.min.js"></script>
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/angularslideables-master/angularslideables.js"></script>

    <script>angular.module('materialAdmin').requires.push('localytics.directives');</script>
    <script>angular.module('materialAdmin').requires.push('angularSlideables');</script>
}