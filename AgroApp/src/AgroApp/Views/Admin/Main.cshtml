<md-content layout-align="center center" layout-fill layout="column" ng-cloak>
    <div class="md-whiteframe-5dp layout-content">
        <md-toolbar ng-controller="LoginView">
            <div class="md-toolbar-tools">
                <h2>
                    <span>Beheer</span>
                </h2>
                <span flex></span>
                <h6>
                    <span style="font-weight: 100">Ingelogd als {{gebruiker}}</span>
                </h6>
                <md-button>
                    log uit
                </md-button>
            </div>
        </md-toolbar>
        <div ng-controller="Navigation">
            <div layout-gt-xs="row">
                <md-list flex-gt-xs="50">
                    <md-subheader class="md-no-sticky">Planning</md-subheader>
                    <md-list-item ng-click="changeView('admin/planning')">
                        <md-icon class="notopmargin">view_agenda</md-icon>
                        <p>Planning</p>
                    </md-list-item>

                    <md-list-item ng-click="changeView('admin/opdracht')">
                        <md-icon class="notopmargin">note</md-icon>
                        <p>Opdracht Aanmaken</p>
                    </md-list-item>

                    <md-subheader class="md-no-sticky">Werkbonnen</md-subheader>
                    <md-list-item ng-click="changeView('admin/Werkbonadd')">
                        <md-icon class="notopmargin">work</md-icon>
                        <p>Werkbon Toevoegen</p>
                    </md-list-item>

                    <md-list-item ng-click="changeView('admin/WerkbonCheck')">
                        <md-icon class="notopmargin">edit</md-icon>
                        <p>Werkbon Controleren</p>
                    </md-list-item>
                </md-list>
                <md-list flex-gt-xs="50">
                    <md-subheader class="md-no-sticky">Beheer</md-subheader>
                    <md-list-item ng-click="changeView('admin/gebruikerbeheer')">
                        <md-icon class="notopmargin">assignment ind</md-icon>
                        <p>Gebruiker Beheer</p>
                    </md-list-item>

                    <md-list-item ng-click="changeView('admin/machine')">
                        <md-icon class="notopmargin">build</md-icon>
                        <p>Machine Beheer</p>
                    </md-list-item>

                    <md-subheader class="md-no-sticky">Statistieken</md-subheader>
                    <md-list-item ng-click="hoi()">
                        <md-icon class="notopmargin">assessment</md-icon>
                        <p>TO DO</p>
                    </md-list-item>
                </md-list>
            </div>
            <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
        </div>
    </div>
</md-content>

<div class="body-halfbackground"></div>

@section scripts{
    <script src="~/js/admin.js"></script>
}