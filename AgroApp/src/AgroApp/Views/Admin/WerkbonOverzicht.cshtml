<md-content layout-align-gt-xs="start center" layout-fill layout="column" ng-cloak ng-controller="Navigation" class="transparent content-padding">
    <div class="md-whiteframe-5dp layout-content">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2>
                    <span>Werkbonnen</span>
                </h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="changeView('admin/machinebeheer/archief')"><md-icon>archive</md-icon></md-button>
                <md-button class="md-icon-button" ng-click="changeView('admin/machinebeheer/toevoegen')"><md-icon>add_circle</md-icon></md-button>
                <md-button class="md-icon-button" ng-click="changeView('admin/main')"><md-icon>arrow_back</md-icon></md-button>
            </div>
        </md-toolbar>
        <div ng-controller="WerkbonView" ng-init="getWerkbonnen()">
            <div class="content">
                <md-input-container class="md-block inputnomargin">
                    <label>Zoek Machine</label>
                    <md-icon>search</md-icon>
                    <input ng-model="searchterm" type="search">
                </md-input-container>
            </div>
            <md-divider></md-divider>
            <md-list>
                <md-list-item class="md-3-line" ng-repeat="werkbon in werkbonnen | filter:searchterm")" ng-click="hoi()">
                    <md-icon class="notopmargin" ng-style="{color: '#3F51B5'}">directions_car</md-icon>
                    <div class="md-list-item-text" layout="column">
                        <h3>{{ werkbon.Klant.Name }}</h3>
                        <p>{{ werkbon.Opmerking }}</p>
                    </div>
                    <span flex></span>
                    <p>Kenteken: {{ werkbon.Mankeuze}}</p>
                    <md-icon ng-style="{color: '#3F51B5'}">edit</md-icon>
                </md-list-item>
            </md-list>
            <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
        </div>
    </div>
</md-content>

<div class="body-halfbackground"></div>

@section scripts{
    <script src="~/js/admin.js"></script>
}
