@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-current-skin="blue" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" data-ng-controller="UserManagement as um">
        <div class="container">
            <div class="card">
                <div class="form-horizontal">
                    <div class="card-header ch-alt m-b-20">
                        <h2>Gebruiker '{{um.userDetails.Name}}' wijzigen <small>Vul de gegevens hieronder in en druk vervolgens op Verzenden</small></h2>
                    </div>

                    <div ng-init="um.userDetails = @ViewData["userData"]"></div>

                    <div class="card-body card-padding">
                        <div class="form-group">
                            <label for="inputFullName" class="col-sm-2 control-label">Volledige Naam</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.userDetails.Name" type="text" class="form-control input-sm" id="inputFullName" placeholder="Volledige Naam">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.userDetails.Username" type="email" class="form-control input-sm" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputRole" class="col-sm-2 control-label">Rol</label>
                            <div class="col-sm-10 m-b-10">
                                <div class="fg-line">
                                    <select ng-model="um.userDetails.Role" chosen data-placeholder="Selecteer een rol..." class="w-100" id="inputRole">
                                        <option value="0">Gebruiker</option>
                                        <option value="1">Administrator</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-primary btn-sm waves-effect" ng-click="um.applyChangesToUser()">Wijzig gebruiker</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>