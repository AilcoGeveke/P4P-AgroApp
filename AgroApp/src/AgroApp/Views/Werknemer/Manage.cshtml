<md-content layout-align-gt-xs="center center" layout-fill layout="column" ng-cloak ng-controller="Navigation" class="transparent">
    <div class="md-whiteframe-5dp layout-content form-content" ng-controller="WerknemerEdit">
        <md-toolbar ng-controller="LoginView">
            <div class="md-toolbar-tools">
                <h2>
                    <span>Wijzigt momenteel @ViewData["naam"]</span>
                </h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="changeView('werknemer/menu')"><md-icon>arrow_back</md-icon></md-button>
            </div>
        </md-toolbar>
        <div class="content">
            <p hidden ng-model="userDetails.id"></p>
            <md-input-container class="md-block inputnomargin">
                <label>Huidig wachtwoord</label>
                <input type="password">
            </md-input-container>
            <md-input-container class="md-block inputnomargin">
                <label>Nieuw wachtwoord</label>
                <input type="password">
            </md-input-container>

        </div>
        <md-divider></md-divider>
        <div layout="row" layout-align="end center" class="content-actions">
            <md-button class="md-primary md-raised" ng-click="showConfirmChangePasswordDialog()">Verander wachtwoord</md-button>
        </div>
        <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
    </div>
</md-content>

<div class="body-halfbackground"></div>
@section scripts{
    <script src="~/js/admin.js"></script>
}