@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-current-skin="blue" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" ng-controller="TimesheetController as am">
        <div class="container">

            <div slider="showNewAssignmentCard">
                <div class="card">
                    <div class="card-header ch-alt m-b-15">
                        <h2>Nieuwe Opdracht</h2>
                    </div>
                    <div class="card-body card-padding container-fluid">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-sm-6" ng-init="am.getAllCustomers()">

                                    <div class="form-group fg-line">
                                        <label>Klant</label>
                                        <select chosen data-placeholder="Selecteer een klant" class="w-100" width="'100%'"
                                                ng-model="am.newAssignment.Customer"
                                                ng-options="x as x.Name for x in am.allCustomers"></select>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="date-picker input-group w-100" ng-class="{ 'is-opened': opened == true }">
                                        <div class="fg-line" ng-class="{ 'fg-toggled': opened == true }">

                                            <label>Datum</label>
                                            <input ng-click="open($event, 'opened')" type="text" class="form-control" uib-datepicker-popup="{{format}}" show-weeks="false" ng-model="am.newAssignment.Date" is-open="opened" min-date="minDate" datepicker-options="dateOptions" ng-required="true" close-text="Close" placeholder="Select Date" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group fg-line">
                                        <label>Locatie</label>
                                        <input type="text" class="form-control ng-isolate-scope" placeholder="Locatie"
                                               ng-model="am.newAssignment.Location">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-xs-12">
                            <div class="form-group fg-line">
                                <label>Beschrijving</label>
                                <textarea class="form-control" rows="6" placeholder="Beschrijving..."
                                          ng-model="am.newAssignment.Description"></textarea>
                            </div>
                        </div>

                        <div ng-init="am.getAllUsers()">
                            <div class="col-xs-12">
                                <div class="form-group fg-line">
                                    <label>Werknemers</label>
                                    <select chosen multiple class="w-100"
                                            data-placeholder="Selecteer de werknemers"
                                            ng-model="am.newAssignment.Employees"
                                            ng-options="x as x.Name for x in am.allUsers"></select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body bgm-gray card-padding">
                        <button class="btn btn-primary m-r-15" ng-click="am.addAssignment()">Toevoegen</button>
                        <button class="btn btn-default" ng-click="showNewAssignmentCard = false; showMainView = true" slide-toggle="#newAssignmentCard">Annuleren</button>
                    </div>
                </div>
            </div>

            <div slider="showMainView" enabled="true">
                <div class="card">
                    <div class="card-header ch-alt">
                        <h2>Alle Opdrachten <small>Klik op de kolomkoppen om te sorteren</small></h2>
                        <button class="button btn bgm-red btn-float waves-effect" ng-hide="showNewAssignmentCard" ng-click="showNewAssignmentCard = true; showMainView = false"><i class="zmdi zmdi-plus"></i></button>
                    </div>
                    <div class="card-body card-padding">
                        <div class="date-picker input-group w-100" ng-class="{ 'is-opened': opened2 == true }">
                            <div class="fg-line" ng-class="{ 'fg-toggled': opened2 == true }">
                                <label>Datum</label>
                                <input ng-click="open($event, 'opened2')" ng-change="am.getAllAssignments()" type="text" class="form-control" uib-datepicker-popup="dd-MM-yyyy" show-weeks="false" ng-model="am.selectedDate" is-open="opened2" min-date="minDate" datepicker-options="dateOptions" ng-required="true" close-text="Close" placeholder="Selecteer een datum" />
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table ng-table="am.Table" class="table table-striped table-vmiddle" ng-init="am.getAllAssignments()">
                            <colgroup>
                                <col width="10%" />
                                <col width="30%" />
                                <col />
                                <col width="125px" />
                            </colgroup>
                            <tr ng-repeat="w in am.allAssignments">
                                <td data-title="'Taaknummer'" sortable="'id'">
                                    {{ w.IdAssignment / 10 | number:0 }}
                                </td>
                                <td data-title="'Locatie'" sortable="'locatie'">
                                    {{ w.Location }}
                                </td>
                                <td data-title="'Beschrijving'" sortable="'beschrijving'">
                                    {{ w.Description }}
                                </td>
                                <td>
                                    <button class="button btn btn-default" ng-click="am.changeAssignment()"><i class="zmdi zmdi-edit"></i></button>
                                    <button class="btn btn-default" ng-click="am.archiveMachine(w)"><i class="zmdi zmdi-delete"></i></button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header ch-alt">
                    <h2>Alle opdrachten verwijderen</h2>
                    <small>Als u op deze knop drukt zulle alle opgeslagen uren en opdrachten verwijderd worden.</small>
                </div>
                <div class="card-body  bgm-gray card-padding">
                    <button class="btn btn-primary m-r-15" ng-click="showConfirmDeleteAll()"><i class="zmdi"></i>Verwijder alles</button>
                </div>
            </div>

        </div>
    </section>
</section>

@section styles{
    <link href="~/lib/chosen/chosen.css" rel="stylesheet" />
    <link href="~/lib/chosen/chosen-sprite.png" rel="image_src" />
}

@section scripts{
    <script src="~/lib/chosen/chosen.js"></script>
    <script src="~/lib/angular-chosen-localytics/dist/angular-chosen.min.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/angularslideables-master/angularslideables.js"></script>
    <script src="~/lib/angular-nouislider/src/nouislider.js"></script>

    <script>angular.module('materialAdmin').requires.push('localytics.directives');</script>
    <script>angular.module('materialAdmin').requires.push('angularSlideables');</script>
}