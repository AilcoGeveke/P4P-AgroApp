
<div class="card">
    <div class="form-horizontal">
        <div class="card-header">
            <h2>{{ctrl.isAdding ? "Nieuwe klant" : "Klant '" + ctrl.customerDetails.name + "' wijzigen"}} <small>Vul de gegevens hieronder in en druk vervolgens op verzenden</small></h2>
        </div>

        <form class="card-body card-padding" ng-submit="ctrl.isAdding ? ctrl.addCustomer() : ctrl.applyChangesToCustomer()" name="form">
            <div class="form-group">
                <label for="inputFullName" class="col-sm-2 control-label">Volledige Naam</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-minlength="3" ng-model="ctrl.customerDetails.name" type="text" class="form-control input-sm" name="fullname" placeholder="Volledige Naam">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputAdres" class="col-sm-2 control-label">Adres</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-minlength="3" ng-model="ctrl.customerDetails.address" type="text" class="form-control input-sm" name="address" placeholder="Adres">
                        <small ng-show="form.address.$touched && form.address.$invalid" class="help-block">Adres moet minimaal 3 characters bevatten</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary btn-icon-text waves-effect m-r-15" type="submit" ng-disabled="form.$invalid"><i class="zmdi zmdi-check"></i>{{ctrl.isAdding ? "Toevoegen" : "Wijzig klant"}}</button>
                    <button class="btn btn-default btn-icon-text waves-effect" type="reset" ng-click="ctrl.showEditCard = false; ctrl.showMainCard = true; ctrl.customerDetails = {}"><i class="zmdi zmdi-close"></i>Annuleren</button>
                </div>
            </div>
        </form>
    </div>
</div>