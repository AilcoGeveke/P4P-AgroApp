@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-current-skin="blue" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" ng-controller="AttachmentManagement as um">
        <div class="container">
            <div class="card">
                <div class="card-header ch-alt m-b-20">
                    <h2>Alle 
                    hulpstukken<small>Klik op de kolomkoppen om te sorteren</small></h2>
                    <a class="button btn bgm-red btn-float waves-effect" href="toevoegen"><i class="zmdi zmdi-plus"></i></a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table ng-table="um.tableSorting" class="table table-striped table-vmiddle" ng-init="um.getAllAttachments()">
                            <tr ng-repeat="w in um.allAttachments">
                                <td data-title="'ID'" sortable="'id'">
                                    {{ w.IdAttachment }}
                                </td>
                                <td data-title="'Naam'" sortable="'Naam'">
                                    {{ w.Name }}
                                </td>
                                <td data-title="'Adres'" sortable="'Adres'">
                                    {{ w.Number }}
                                </td>
                                <td>
                                    <a class="button btn btn-default" href="wijzigen/{{w.IdAttachment}}"><i class="zmdi zmdi-edit"></i></a>
                                    <button class="btn btn-default" ng-click="um.archiveAttachment(w)"><i class="zmdi zmdi-delete"></i></button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>