
<div class="card">
    <div class="form-horizontal">
        <div class="card-header">
            <h2>{{ctrl.isAdding ? "Nieuwe gebruiker" : "Gebruiker '" + ctrl.userDetails.name + "' wijzigen"}}<small>Vul de gegevens hieronder in en druk vervolgens op Verzenden</small></h2>
        </div>
        <div class="card-body card-padding">
            <div class="form-group">
                <label for="inputFullName" class="col-sm-2 control-label">Volledige Naam</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-model="ctrl.userDetails.name" type="text" class="form-control input-sm" id="inputFullName" placeholder="Volledige Naam">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <div class="fg-line">
                        <input required ng-model="ctrl.userDetails.username" type="email" class="form-control input-sm" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Wachtwoord</label>
                <div class="col-sm-10">

                    <div class="fg-line">
                        <input required ng-model="ctrl.userDetails.password" type="password" class="form-control input-sm" id="inputPassword3" placeholder="Wachtwoord">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="inputRole" class="col-sm-2 control-label">Rol</label>
                <div class="col-sm-10 m-b-10">
                    <div class="fg-line">
                        <ui-select ng-model="ctrl.userDetails.role"
                                   style="width: 100%;"
                                   title="Selecteer een rol"
                                   class="form-control">
                            <ui-select-match placeholder="Selecteer een rol...">{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="role.id as role in ctrl.availableRoles | filter: $select.search">
                                <div ng-bind-html="role.name | highlight: $select.search"></div>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary btn-icon-text waves-effect m-r-15" ng-click="ctrl.isAdding ? ctrl.registerUser() : ctrl.applyChangesToUser()"><i class="zmdi zmdi-check"></i>{{ctrl.isAdding ? "Toevoegen" : "Wijzig gebruiker"}}</button>
                    <button class="btn btn-default btn-icon-text waves-effect" ng-click="ctrl.showEditCard = false; ctrl.showMainCard = true"><i class="zmdi zmdi-close"></i>Annuleren</button>
                </div>
            </div>
        </div>
    </div>
</div>