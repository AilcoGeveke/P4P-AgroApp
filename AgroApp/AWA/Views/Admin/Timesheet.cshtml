@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}

<!-- Header -->
<header id="header" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main" ng-controller="TimesheetController as ctrl" ng-cloak>
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>
    <section id="content" ng-init="ctrl.employeeAssignment = @ViewData["EmployeeAssignment"]; ctrl.selectedAssignment = ctrl.employeeAssignment.assignment">
        <div class="container c-alt">
            <div class="card">
                <div class="card-header ch-alt">
                    <div class="media-body">
                        <h2>{{ctrl.selectedAssignment.customer.name}} <small>{{ctrl.selectedAssignment.date}}</small></h2>
                    </div>
                </div>
                <div class="card-body card-padding">
                    <p class="c-black m-b-0">locatie</p>
                    <p>{{ctrl.selectedAssignment.location}}</p>
                    <p class="c-black m-b-0">beschrijving</p>
                    <p class="m-b-0">{{ctrl.selectedAssignment.description}}</p>
                </div>
            </div>

            <div class="card" ng-show="ctrl.employeeAssignment.isVerified">
                <div class="card-header bgm-green">
                    <div class="media-body">
                        <h2>Deze werkbon is gecontroleerd en definitief <small>De werkbon kan niet meer worden aangepast</small></h2>
                    </div>
                </div>
            </div>

            @if (ViewData["EnableControls"] as bool? ?? false)
            {
                <div slider="ctrl.showNewTaskCard">
                    <div class="card">
                        <div class="card-header ch-alt">
                            <h2>Taak Toevoegen<small>Hier kunt u uw gewerkte uren invullen</small></h2>
                        </div>
                        <div class="card-body card-padding">
                            <div class="row">
                                <div class="col-xs-12 m-b-15" ng-init="">
                                    <label>Type Werk</label>
                                    <ui-select ng-model="ctrl.timesheetDetails.workType"
                                               style="width: 100%;"
                                               class="form-control">
                                        <ui-select-match placeholder="Selecteer hier op welke manier u heeft gewerkt...">{{$select.selected}}</ui-select-match>
                                        <ui-select-choices repeat="x in ctrl.allWorkTypes | filter: $select.search">
                                            <div ng-bind-html="x | highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>
                                </div>
                                <div uib-collapse="ctrl.timesheetDetails.workType != 'Machinist'">
                                    <div class="col-sm-6 m-b-15" ng-init="ctrl.getAllMachines()">
                                        <label>Voertuig</label>
                                        <ui-select ng-model="ctrl.timesheetDetails.machine"
                                                   style="width: 100%;"
                                                   class="form-control">
                                            <ui-select-match placeholder="Welk voertuig heeft u gebruikt...">{{$select.selected.name}}</ui-select-match>
                                            <ui-select-choices repeat="x in ctrl.allMachines | filter: $select.search">
                                                <div ng-bind-html="x.name | highlight: $select.search"></div>
                                            </ui-select-choices>
                                        </ui-select>
                                    </div>
                                    <div class="col-sm-6 m-b-15">
                                        <label>Hulpstuk</label>
                                        <ui-select ng-model="ctrl.timesheetDetails.attachment"
                                                   style="width: 100%;"
                                                   class="form-control">
                                            <ui-select-match placeholder="Welk hulpstuk heeft u gebruikt...">{{$select.selected.name}}</ui-select-match>
                                            <ui-select-choices repeat="x in ctrl.allAttachments | filter: $select.search">
                                                <div ng-bind-html="x.name | highlight: $select.search"></div>
                                            </ui-select-choices>
                                        </ui-select>
                                    </div>
                                </div>
                            </div>

                            <label>Tijden</label>
                            <div class="row">
                                <div class="col-sm-4">
                                    <small>Van</small>
                                    <div class="form-group fg-line">
                                        <input ng-model="ctrl.timesheetDetails.startTime" type="time" class="form-control" placeholder="bv. 07:00" ng-change="ctrl.updateTime(true)">{{ctrl.timesheetDetails.startTime}}
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <small>Tot</small>
                                    <div class="form-group fg-line">
                                        <input ng-model="ctrl.timesheetDetails.endTime" type="time" class="form-control" placeholder="bv. 15:00" ng-change="ctrl.updateTime(true)">{{ctrl.timesheetDetails.endTime}}
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <small>Totaal</small>
                                    <div class="form-group fg-line">
                                        <input ng-model="ctrl.timesheetDetails.totalTime" type="time" class="form-control" ng-change="ctrl.updateTime(false)">{{ctrl.timesheetDetails.totalTime}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group fg-line">
                                        <label>Beschrijving</label>
                                        <textarea class="form-control" rows="6" placeholder="Beschrijving..."
                                                  ng-model="ctrl.timesheetDetails.description"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ctrl.employeeAssignment}}
                        <div class="card-body card-padding bgm-gray">
                            <button class="btn btn-primary m-r-15" ng-click="ctrl.addTimesheet()">Toevoegen</button>
                            <button class="btn btn-default" ng-click="ctrl.showNewTaskCard = false; ctrl.showTaskOverview= true" slide-toggle="#showNewTaskCard">Annuleren</button>
                        </div>
                    </div>
                </div>
            }
            @*Overzicht Taken*@
            <div slider="ctrl.showTaskOverview" enabled="true">
                <div class="card">
                    <div class="card-header ch-alt m-b-15">
                        <h2>Overzicht Uren <small>Overzicht ingevulde gegevens voor deze opdracht</small></h2>
                        <button class="btn bgm-red btn-float waves-effect" ng-show="'@ViewData["EnableControls"]' == 'True'" ng-click="ctrl.showNewTaskCard = true; ctrl.showTaskOverview = false"><i class="zmdi zmdi-plus"></i></button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table ng-table="am.Table" class="table table-striped table-vmiddle" ng-init="ctrl.getAllTimesheets(ctrl.employeeAssignment.employeeAssignmentId)">
                                <colgroup>
                                </colgroup>
                                <tr ng-repeat="w in ctrl.allTimesheets">
                                    <td data-title="'Acties'" class="col-fit">
                                        <button class="button btn btn-default" ng-click="ctrl.isAdding = false"><i class="zmdi zmdi-edit"></i></button>
                                        <button class="button btn btn-default" ng-click="ctrl.deleteTimesheet()"><i class="zmdi zmdi-delete"></i></button>
                                    </td>
                                    <td data-title="'Soort Werk'" sortable="'worktype'" class="col-fit">
                                        {{ w.workType }}
                                    </td>
                                    <td data-title="'Van'" sortable="'start'" class="col-fit">
                                        {{ w.startTime | date:"HH:mm" }}
                                    </td>
                                    <td data-title="'Tot'" sortable="'end'" class="col-fit">
                                        {{ w.endTime | date:"HH:mm" }}
                                    </td>
                                    <td data-title="'Totaal'" sortable="'end'" class="col-fit">
                                        {{ w.totalTime | date:"HH:mm" }}
                                    </td>
                                    <td data-title="'Beschrijving'" sortable="'beschrijving'">
                                        {{ w.description }}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="lv-header card-body card-padding bgm-teal c-white">
                        Totaal: {{ctrl.getTotalTime()}} uur
                    </div>
                </div>
            </div>

            <div class="card" ng-init="ctrl.getAllUsers()">
                <div class="card-header ch-alt">
                    <h2>Collegas <small>Met welke collegas heb je gewerkt</small></h2>
                </div>

                <div class="card-body card-padding">
                    <select chosen multiple class="w-100"
                            data-placeholder="Selecteer uw collega's"
                            ng-model="ctrl.selectedCoworkers"
                            ng-options="x.IdEmployee as x.Name for x in ctrl.allUsers"></select>
                </div>
            </div>

            <div class="card">
                <div class="card-body card-padding">
                    <button class="btn bgm-blue">Opslaan</button>
                </div>
            </div>
        </div>
    </section>
</section>

@section scripts{
    <script src="~/lib/angularslideables-master/angularslideables.es5.min.js"></script>
    <script>angular.module('materialAdmin').requires.push('angularSlideables');</script>
}