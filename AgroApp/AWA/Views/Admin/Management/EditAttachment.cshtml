@{
    Layout = "~/views/shared/_adminlayout.cshtml";
}
<!-- Header -->
<header id="header" data-ng-controller="headerCtrl as hctrl">@{ await Html.RenderPartialAsync("header-image-logo");  }</header>

<section id="main">
    <!-- Sidebar -->
    <aside id="sidebar" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }">@{ await Html.RenderPartialAsync("sidebar-left");  }</aside>

    <!-- Page Content -->
    <section id="content" data-ng-controller="AttachmentManagement as um">
        <div class="container">
            <div class="card">
                <div class="form-horizontal">
                    <div class="card-header ch-alt m-b-20">
                        <h2>Hulpstuk '{{um.attachmentDetails.Name}}' wijzigen <small>Vul de gegevens hieronder in en druk vervolgens op verzenden</small></h2>
                    </div>

                    <div ng-init="um.attachmentDetails = @ViewData["userData"]"></div>

                    <div class="card-body card-padding">
                        <div class="form-group">
                            <label for="inputFullName" class="col-sm-2 control-label">Naam hulpstuk</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.attachmentDetails.Name" type="text" class="form-control input-sm" id="inputFullName" placeholder="Volledige Naam">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAdres" class="col-sm-2 control-label">Nummer</label>
                            <div class="col-sm-10">
                                <div class="fg-line">
                                    <input required ng-model="um.attachmentDetails.Number" type="number" class="form-control input-sm" id="inputAdres" placeholder="Nummer">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-primary btn-sm waves-effect" ng-click="um.applyChangesToAttachment()">Wijzig hulpstuk</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>