<md-content layout-align-gt-xs="center center" layout-fill layout="column" ng-cloak ng-controller="Navigation" class="transparent">
    <div class="md-whiteframe-5dp layout-content form-content">
        <md-toolbar ng-controller="LoginView">
            <div class="md-toolbar-tools">
                <h2>
                    <span>Wijzigt momenteel: @ViewData["naam"]</span>
                </h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="changeView('admin/machinebeheer')"><md-icon>arrow_back</md-icon></md-button>
            </div>
        </md-toolbar>
        <div class="content" ng-controller="VehicleEdit">
            <form name="gebruikerform" layout-padding layout="column" ng-submit="EditMachine()">
                <md-input-container class="md-block inputnomargin">
                    <p value=@ViewData["id"] ng-model="machineDetails.id" ng-style="{display: none}"></p>
                    <label>Machine naam</label>
                    <input required type="text" name="machineName" value="@ViewData["naam"]" minlength="2" maxlength="40">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>Machine nummer</label>
                    <input required type="text" name="machineNum" ng-model="machineDetails.nummer" value=@ViewData["kenteken"] minlength="2" maxlength="10">
                </md-input-container>

                <md-input-container class="md-block inputnomargin">
                    <label>Kenteken</label>
                    <input input type="text" name="machineKenteken" ng-model="machineDetails.kenteken" value=@ViewData["machinenummer"]>
                </md-input-container>

                <md-input-container class="inputnomargin">
                    <label>Categorie</label>
                    <md-select required ng-model="machineDetails.type">
                        <md-option ng-repeat="n in types" ng-selected="$first">
                            {{n}}
                        </md-option>
                    </md-select>
                </md-input-container>
                <p>Huidige categorie: @ViewData["type"]</p>
            
            <div layout-align="row">
                <span flex></span>
                <md-button ng-click="showConfirmChangesDialog()">Pas Wijzigingen Toe</md-button>
                <md-button disabled ng-style="{color: 'red'}" ng-click="showConfirmDeleteDialog()">Verwijder Machine</md-button>
            </div>
          </form>
        </div>
        <md-progress-linear ng-show="showLoading" md-mode="indeterminate"></md-progress-linear>
    </div>
</md-content>

<div class="body-halfbackground"></div>

@section scripts{
    <script src="~/js/admin.js"></script>
}